{
    // ~/Library/Application Support/Code/User/settings.json にあるファイルに対して補完が効く。
    // なのでシンボリックリンクを貼った場合は、リンク先のファイルのパスで直接開くと補完が効かない
    "terminal.integrated.shell.osx": "/bin/zsh",
    "editor.fontSize": 18,
    "terminal.integrated.fontSize": 18,
    "workbench.iconTheme": "vscode-icons",
    // --------------------------------------------------------------------
    // VSCodeVim setting
    // カーソルは点滅させない
    "editor.cursorBlinking": "solid",
    // ヤンクした内容をクリップボードと共有
    "vim.useSystemClipboard": true,
    // 検索対象の単語をハイライト
    "vim.hlsearch": true,
    // normal mode 時のキーバインド変更
    "vim.normalModeKeyBindings": [
        // jkhlの移動強化
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "}"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "{"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "0"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "$"
            ]
        },
        // なぜか設定できなかったのでショートカットに直接設定
        // 設定値は, keybindings.json 参照
        // workbench.action.nexteditor
        // workbench.action.previouseditor
        // {
        //     "before": ["<C-A-n>"],
        //     "after" : ["gt"]
        // },
        // {
        //     "before": ["<C-A-p>"],
        //     "after" : ["gT"]
        // }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [],
    // insert mode 時のキーバインド変更
    "vim.insertModeKeyBindings": [
        // この設定を生かしておくと、jから始まる2バイト文字(e.g.時間)を
        // 変換したときに 一つ前の文字をoverwriteしてしまう。
        // {
        //     "before": [
        //         "j",
        //         "j"
        //     ],
        //     "after": [
        //         "Esc"
        //     ]
        // },
    ],
    // visual mode 時のキーバインド変更
    "vim.visualModeKeyBindings": [
        // jkhlの移動強化
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "}"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "{"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "0"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "$"
            ]
        },
    ],
    // vscodevim setting
    // --------------------------------------------------------------------
    // --------------------------------------------------------------------
    // general setting
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // VSCodeからフォーカスが外れたときに自動保存
    "files.autoSave": "onWindowChange",
    // 保存時にフォーマッターを適用する
    "editor.formatOnSave": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreview": true,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "extensions.autoUpdate": false,
    // general setting
    // --------------------------------------------------------------------
    // --------------------------------------------------------------------
    // general remote container setting
    // リモートコンテナでも必ずinstallしたいVSCode拡張機能を記載
    "remote.containers.defaultExtensions": [
        "eamodio.gitlens"
    ],
    "hediet.vscode-drawio.local-storage": "",
    "hediet.vscode-drawio.offline": false,
    "sync.gist": "69a8d93980f8863136e645a3eead993e",
    // general remote container setting
    // --------------------------------------------------------------------
    "[shellscript]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "foxundermoon.shell-format",
    },
    "[dockerfile]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    },
    // --------------------------------------------------------------------
    // Python setting
    // 基本的な管理方針として、Pythonの設定は、プロジェクトごとのsetting.jsonに記載する
    // --------------------------------------------------------------------
    "[ipynb]": {
        // ipynbファイルで、一つのセルの縦幅を 400->600 に広げる
        "python.dataScience.maxOutputSize": 600,
    },
    "[javascript]": {
        "editor.detectIndentation": false
    },
    // --------------------------------------------------------------------
    // markdown setting
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.quickSuggestionsDelay": 0,
        // markdownは 行末の半角スペース2つで改行なので、消さないようにする
        "files.trimTrailingWhitespace": false,
        "editor.renderWhitespace": "boundary"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    // 以下textlintの設定
    "textlint.languages": [],
    // markdown setting
    // --------------------------------------------------------------------
    // --------------------------------------------------------------------
    // yaml setting
    "[yaml]": {
        "editor.tabSize": 2
    },
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "yaml.validate": false,
    "window.zoomLevel": 0,
    "markdown.marp.themes": [
        "./marp-themes/arrowkato.css"
    ],
    "shellcheck.executablePath": "/usr/local/bin/shellcheck",
    "tabnine.experimentalAutoImports": true,
    // yaml setting
    // --------------------------------------------------------------------
    // --------------------------------------------------------------------
    // JSON setting
    "[json]": {
        "editor.tabSize": 2
    }
    // JSON setting
    // --------------------------------------------------------------------
}
